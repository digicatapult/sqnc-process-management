  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.37",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "chai": "^5.1.1",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@polkadot/api": "^11.3.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  }
