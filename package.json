  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/sqnc-process-management.git"
  },
  "files": [
    "/build"
  ],
  "engines": {
    "node": ">=20.x.x",
    "npm": ">=10.x.x"
  },
