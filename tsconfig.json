{
  "compilerOptions": {
    "outDir": "build/",
    "rootDir": "./",
    "lib": ["ES6", "ES2015", "ESNext"],
    "types": ["node", "mocha"],
    "resolveJsonModule": true,
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,
    "declaration": true
  },
  "ts-node": { "files": true },
  "include": ["src/**/*", "src/tests/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
